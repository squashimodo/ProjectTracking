<% if object && object.errors.size > 0 %>
	<div class="alert-message block-message error">
		<p><strong><%= pluralize(object.errors.size, "error") %></strong> when submitting the form, correct them and try again</p>
		<ul>
			<% object.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>